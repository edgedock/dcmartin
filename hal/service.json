{
  "org": "dcmartin@us.ibm.com",
  "label": "hal",
  "description": "Provides hardware abstraction layer as service",
  "documentation": "https://github.com/dcmartin/open-horizon/hal/README.md",
  "url": "com.github.dcmartin.open-horizon.hal",
  "version": "0.0.1",
  "arch": null,
  "public": true,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
        { "name": "HAL_PERIOD", "label": "seconds between updates", "type": "int", "defaultValue": "60" },
        { "name": "LOG_LEVEL", "label": "specify logging level", "type": "string", "defaultValue": "info" },
        { "name": "DEBUG", "label": "debug on/off", "type": "boolean", "defaultValue": "false" }
  ],
  "deployment": {
    "services": {
      "hal": {
        "environment": [
           "SERVICE_LABEL=hal"
        ],
        "image": null,
        "specific_ports": [ { "HostPort": "8582:80/tcp", "HostIP": "0.0.0.0" } ],
        "privileged": true
      }
    }
  },
  "tmpfs": {
    "size": 2048000
  },
  "ports": {
    "80/tcp": 8582
  }
}
