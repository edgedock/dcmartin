{
  "org": "dcmartin@us.ibm.com",
  "label": "yolo",
  "description": "Provides hardware abstraction layer as service",
  "documentation": "https://github.com/dcmartin/open-horizon/yolo/README.md",
  "url": "com.github.dcmartin.open-horizon.yolo",
  "version": "0.0.1",
  "arch": "{arch}",
  "public": true,
  "sharable": "multiple",
  "requiredServices": [],
  "userInput": [
    {
      "name": "LOG_LEVEL",
      "label": "specify logging level",
      "type": "string",
      "defaultValue": "info"
    },
    {
      "name": "DEBUG",
      "label": "debug on/off",
      "type": "boolean",
      "defaultValue": "false"
    }
  ],
  "deployment": {
    "services": {
      "yolo": {
        "environment": [
          "SERVICE=yolo"
        ],
        "image": "dcmartin/{arch}_yolo:0.0.1",
        "privileged": true
      }
    }
  },
  "tmpfs": {
    "size": 8192000
  },
  "ports": {
    "8586/tcp": 80
  }
}
