{
  "org": "dcmartin@us.ibm.com",
  "label": "yolo2msghub",
  "description": "Sends JSON payloads from `yolo` service to IBM Message Hub",
  "documentation": "https://github.com/dcmartin/open-horizon/yolo2msghub/README.md",
  "url": "com.github.dcmartin.open-horizon.yolo2msghub",
  "version": "0.0.1",
  "arch": "amd64",
  "public": true,
  "sharable": "singleton",
  "requiredServices": [
    {
      "url": "github.com.dcmartin.open-horizon.yolo",
      "org": "dcmartin@us.ibm.com",
      "version": "0.0.1",
      "arch": "amd64"
    },
    {
      "url": "github.com.open-horizon.examples.cpu",
      "org": "IBM",
      "version": "1.2.2",
      "arch": "amd64"
    },
    {
      "url": "github.com.open-horizon.examples.gps",
      "org": "IBM",
      "version": "2.0.5",
      "arch": "amd64"
    }
  ],
  "userInput": [
    {
      "name": "YOLO_PERIOD",
      "label": "update interval",
      "type": "int",
      "defaultValue": "90"
    },
    {
      "name": "MSGHUB_APIKEY",
      "label": "message hub API key",
      "type": "string",
      "defaultValue": null 
    },
    {
      "name": "MSGHUB_BROKER",
      "label": "message hub broker list",
      "type": "string",
      "defaultValue": "kafka03-prod02.messagehub.services.us-south.bluemix.net:9093,kafka04-prod02.messagehub.services.us-south.bluemix.net:9093,kafka01-prod02.messagehub.services.us-south.bluemix.net:9093,kafka02-prod02.messagehub.services.us-south.bluemix.net:9093,kafka05-prod02.messagehub.services.us-south.bluemix.net:9093"
    },
    {
      "name": "YOLO_ENTITY",
      "label": "entity to seek, default person",
      "type": "string",
      "defaultValue": "person"
    },
    {
      "name": "LOG_LEVEL",
      "label": "specify logging level",
      "type": "string",
      "defaultValue": "info"
    },
    {
      "name": "DEBUG",
      "label": "debug on/off",
      "type": "boolean",
      "defaultValue": "false"
    }
  ],
  "deployment": {
    "services": {
      "yolo2msghub": {
        "environment": [
          "PATTERN=yolo2msghub"
        ],
        "image": "dcmartin/amd64_yolo2msghub:0.0.1",
        "privileged": false
      }
    }
  },
  "tmpfs": {
    "size": 32
  },
  "ports": {
    "8587/tcp": 80
  }
}
