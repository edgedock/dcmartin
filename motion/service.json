{
  "org": "dcmartin@us.ibm.com",
  "label": "motion",
  "description": "Provides motion-project.io as service",
  "documentation": "https://github.com/dcmartin/open-horizon/motion/README.md",
  "url": "com.github.dcmartin.open-horizon.motion",
  "version": "0.0.1",
  "arch": "amd64",
  "public": true,
  "sharable": "singleton",
  "requiredServices": [
        {
            "url": "github.com.dcmartin.open-horizon.hal",
            "org": "dcmartin@us.ibm.com",
            "version": "0.0.1",
            "arch": "amd64"
        },
        {
            "url": "github.com.open-horizon.examples.cpu",
            "org": "IBM",
            "version": "1.2.2",
            "arch": "amd64"
        },
        {
            "url": "github.com.open-horizon.examples.gps",
            "org": "IBM",
            "version": "2.0.5",
            "arch": "amd64"
        }
  ],
  "userInput": [
        {
            "name": "CONFIG_GROUP",
            "label": "group name for configuration",
            "type": "string",
            "defaultValue": "motion"
        },
        {
            "name": "MQTT_HOST",
            "label": "IP or FQDN for mqtt host",
            "type": "string",
            "defaultValue": "horizon.dcmartin.com"
        },
        {
            "name": "MQTT_PORT",
            "label": "port number",
            "type": "int",
            "defaultValue": "1883"
        },
        {
            "name": "MQTT_USERNAME",
            "label": "username",
            "type": "string",
            "defaultValue": ""
        },
        {
            "name": "MQTT_PASSWORD",
            "label": "password",
            "type": "string",
            "defaultValue": ""
        },
        {
            "name": "LOG_LEVEL",
            "label": "specify logging level",
            "type": "string",
            "defaultValue": "info"
        },
        {
            "name": "DEBUG",
            "label": "debug on/off",
            "type": "boolean",
            "defaultValue": "false"
        }
  ],
  "deployment": {
    "services": {
      "motion": {
        "environment": [
           "PATTERN=motion"
        ],
        "image": "dcmartin/amd64_motion:0.0.1",
        "privileged": true,
        "devices": [
          "/dev/video0:/dev/video0"
        ]
      }
    }
  },
  "tmpfs": {
    "size": 8192000
  },
  "ports": {
    "8080/tcp": 8080,
    "8081/tcp": 8081
  }
}
