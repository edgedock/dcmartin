{
  "org": "dcmartin@us.ibm.com",
  "label": "hzncli",
  "description": "Provides hardware abstraction layer as service",
  "documentation": "https://github.com/dcmartin/open-horizon/base-hzncli/README.md",
  "url": "com.github.dcmartin.open-horizon.base-hzncli",
  "version": "0.0.1",
  "arch": null,
  "public": true,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
    { "name": "HZNCLI_PERIOD", "label": "seconds between update", "type": "int", "defaultValue": "60" },
    { "name": "LOG_LEVEL", "label": "specify logging level", "type": "string", "defaultValue": "info" },
    { "name": "DEBUG", "label": "debug on/off", "type": "boolean", "defaultValue": "false" }
  ],
  "deployment": {
    "services": {
      "hzncli": {
        "environment": [
          "SERVICE_LABEL=hzncli"
        ],
        "image": null,
        "privileged": true
      }
    }
  },
  "tmpfs": {
    "size": 2048000
  },
  "ports": {
    "80/tcp": 8588
  }
}
